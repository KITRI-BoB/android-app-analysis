<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true" android:color="@color/my_tab_indicator_selected">
        <shape android:shape="rectangle">
            <solid android:color="@color/my_tab_indicator_selected" />
        </shape>
    </item>
    <item android:state_selected="false" android:color="@color/transparent">
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent" />
        </shape>
    </item>
</selector>