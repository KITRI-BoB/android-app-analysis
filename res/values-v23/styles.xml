    <style name="WebtoonTheme.CommentList.FOR_GETZZAL" parent="@style/WebtoonTheme.CommentList">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:statusBarColor">#ff546dff</item>
        <item name="toolbarStyle">@style/WebtoonToolbar.CommentList_FOR_GETZZAL</item>
    </style>
    <style name="WebtoonTheme.CommentList.FOR_PLAY" parent="@style/WebtoonTheme.CommentList.FOR_PLAY.BASE">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
    <style name="WebtoonTheme.Splash" parent="@style/WebtoonTheme">
        <item name="android:windowBackground">@drawable/splash_activity_background</item>
        <item name="android:statusBarColor">#ff00d564</item>
        <item name="android:navigationBarColor">#ff00d564</item>
    </style>
    <style name="WebtoonTheme.ZzalList" parent="@style/WebtoonTheme">
        <item name="android:statusBarColor">#ff536dfe</item>
        <item name="toolbarStyle">@style/WebtoonToolbar.ZzalList</item>
